#include <stdio.h>

int main() {
    int num, sum = 0, digit;

    printf("Enter an integer: ");
    scanf("%d", &num);

    for (; num != 0; num /= 10) {
        digit = num % 10;
        sum += digit;
    }

    if (sum % 2 == 0) {
        sum = sum * 2;
    } 
    else {
        sum = sum - 1;
    }

    printf("Final result = %d\n", sum);

    return 0;
}
